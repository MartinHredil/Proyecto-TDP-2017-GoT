package powerups;

public class DuracionPW extends Thread {

	protected volatile boolean execute;
	
	protected Proteccion pw;
	
	public DuracionPW(Proteccion p)
	{
		pw=p;
	}
	
	public void terminate()
	{
		execute = false;
	}
	
	public void run()
	{
		this.execute = true;
		
		while(execute)
		{
			try {
				sleep(10000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			
			if(pw!=null)
			{
				pw.terminar();
			}

		}
	}
}