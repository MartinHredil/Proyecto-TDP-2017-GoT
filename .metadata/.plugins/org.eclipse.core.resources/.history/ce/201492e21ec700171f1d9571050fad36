	{
		terminar = false;
		cantFilas=6;
		cantColumnas=10*80;
		mapa = new Mapa(cantFilas,cantColumnas,this);
		
		nivel = new Nivel1(this);
		
		puntos=0;
		monedas=200;
		enemigos = new Coleccion<Enemigo>();
		
		/*//PRUEBA
		
		
		Enemigo prueba6=new Muerto(mapa.getCelda(1,700),false);
