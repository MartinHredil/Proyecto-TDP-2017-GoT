package personajes;

import javax.swing.ImageIcon;
import javax.swing.JLabel;

import mapa.*;

public class Arquero extends Personaje{

	protected GenerarFlechasArquero generarFlechas;
	
	public Arquero(Celda c)
	{
		super(c);
		ImageIcon imagen = new ImageIcon(this.getClass().getResource("/sources/Arquero3.gif"));
		grafico.setIcon(imagen);
		imagen.setImageObserver(grafico);
		generarFlechas = new GenerarFlechasArquero(this);
		generarFlechas.start();
	}

	public void destruir()
	{
		generarFlechas.terminate();
		super.destruir();
	}
}
	
