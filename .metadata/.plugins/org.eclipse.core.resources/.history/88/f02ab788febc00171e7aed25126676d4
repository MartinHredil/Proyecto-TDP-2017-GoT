package enemigos;

import javax.swing.*;

import mapa.*;

public class DragonMuerto extends Enemigo {

	public DragonMuerto(Celda c)
	{
		super(c);
		
		vida=1000;
		danioAtaque=20;
		
		velocidad = 4;
		monedas = 200;
		puntos = 500;
		
		grafico.setIcon(new ImageIcon(this.getClass().getResource("/sources/Dragon.gif")));
		
		moverme = new MoverEnemigo(this);
		moverme.start();
	}
	
	public void caminar()
	{
		grafico.setIcon(new ImageIcon(this.getClass().getResource("/sources/Dragon.gif")));
	}
	
	public void atacar()
	{
		grafico.setIcon(new ImageIcon(this.getClass().getResource("/sources/Dragon.gif")));
	}
	
}
