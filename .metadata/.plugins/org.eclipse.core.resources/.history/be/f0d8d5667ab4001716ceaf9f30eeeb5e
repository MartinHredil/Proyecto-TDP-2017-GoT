package disparos;
import java.util.Iterator;
import disparos.*;

public class Moverme extends Thread {

	protected volatile boolean execute;
	
	protected DisparoPersonaje dp;
	
	public Moverme(DisparoPersonaje d)
	{
		dp = d;;
	}
	
	public void terminate()
	{
		execute = false;
	}
	
	public void run()
	{
		this.execute = true;
		
		while(execute)
		{
			try {
				sleep(10);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			
			dp.mover();
			dp.getGrafico().setBounds(dp.getCelda().getFila(),dp.getCelda().getColumna()*80,80,80);
		}
	}
}