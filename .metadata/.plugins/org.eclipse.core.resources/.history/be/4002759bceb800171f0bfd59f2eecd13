package personajes;
import java.util.Iterator;

import javax.swing.ImageIcon;
import javax.swing.JLabel;

import mapa.*;

public class Soldado extends Personaje{

	protected Visitar visitar;
	
	public Soldado(Celda c)
	{
		super(c);
		grafico = new JLabel();
		grafico.setIcon(new ImageIcon(this.getClass().getResource("/sources/Soldado.png")));
		visitar = new Visitar(this);
	}
	
	public void destruir()
	{
		visitar.terminate();
		super.destruir();
	}
	
	public void visitar()
	{
		int cont = 0;
		Celda sig;
		
		while(cont<80)
		{
			cont++;
			sig = miCelda.getMapa().getCelda(miCelda.getFila(), miCelda.getColumna()+cont);
			if(sig!=null)
			{
				Iterator<Contenido> it = sig.getContenido();
				while(it.hasNext())
				{
					it.next().aceptar(miVisitor);
				}
			}
		}
	}
	
	
}
